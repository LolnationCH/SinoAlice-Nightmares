<UserControl x:Class="SinoAlice_Nightmares.Controls.NightmareSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SinoAlice_Nightmares.Controls"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="800">
  <Border x:Name="Select_border" BorderThickness="4" BorderBrush="Transparent">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="75"/>
      <ColumnDefinition Width="10"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Image x:Name="Image" Height="75" Grid.RowSpan="4"/>

    <Label x:Name="Name_Label" Content="Name" Grid.Row="0" Grid.Column="2"/>
    <Button x:Name="Select_btn" Content="Select" Grid.Row="1" Grid.Column="2" Click="Select_btn_Click"/>
    </Grid>
  </Border>
</UserControl>
